<Window x:Class="Pexeso.ClientGUI.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pexeso.ClientGUI"
        mc:Ignorable="d"
        Title="Connect to Pexeso" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Nickname" Margin="10,10,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Name="NicknameBox" Margin="10,40,10,0" TextWrapping="Wrap" Height="22" VerticalAlignment="Top"/>
        <Button Content="Connect" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="21" VerticalAlignment="Bottom" Click="Button_Click"/>

    </Grid>
</Window>
